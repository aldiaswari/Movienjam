<resources>
    <declare-styleable name="FullscreenAttrs">
        <attr name="fullscreenBackgroundColor" format="color" />
        <attr name="fullscreenTextColor" format="color" />
    </declare-styleable>
    <declare-styleable name="RoundTabLayout">
        <attr name="accent" format="color"/>
        <attr name="cornerRad" format="integer|string">
            <flag name="rectangle" value="0"/>
            <flag name="rounded" value="15"/>
            <flag name="circle" value="50"/>
        </attr>
        <attr name="src" format="reference"/>
        <attr name="withStroke" format="boolean"/>
    </declare-styleable>

</resources>